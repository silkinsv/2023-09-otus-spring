<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="loadTestingService" class="ru.otus.spring.service.LoadTestingServiceImpl">
        <constructor-arg index="0" value="testing.csv" />
    </bean>

    <bean id="testingDao" class="ru.otus.spring.dao.TestingDaoFromCsv">
        <constructor-arg index="0" ref="loadTestingService" />
    </bean>

    <bean id="testingService" class="ru.otus.spring.service.TestingServiceImpl">
        <constructor-arg index="0" ref="testingDao" />
    </bean>

</beans>